            { "maxTime": 120, "bonus": 20 },
            { "maxTime": 180, "bonus": 10 }
          ]
        }
      }
    },
    "theme": {
      "name": "corporate",
      "colors": {
        "primary": "#2c3e50",
        "accent": "#3498db",
        "correct": "#2ecc71",
        "incorrect": "#e74c3c",
        "background": "#ecf0f1",
        "cardBackground": "#ffffff",
        "textColor": "#333333"
      }
    }
  },

  "challenges": {
